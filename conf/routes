# Routes
GET     /                           controllers.HomeController.index
GET     /login                      controllers.LoginController.index
POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout
GET     /users                      controllers.UserController.index
GET     /reports                    controllers.ReportController.index
GET     /reports/:id                controllers.ReportController.detail(id: Long)
GET     /reports/:id/edit           controllers.ReportController.edit(id: Long)
POST    /reports/update             controllers.ReportController.update
GET     /reports/create             controllers.ReportController.create
POST    /reports/register           controllers.ReportController.register
POST    /reports/delete             controllers.ReportController.delete
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
